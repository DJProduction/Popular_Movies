<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <!--    Provides the syntax for the design of the Settings menu.
        Currently the Settings just displays different ways movies can be sorted and displayed.-->
    <ListPreference
        android:defaultValue="@string/pref_movieSort_popular_movies"
        android:entries="@array/pref_movieSort_options"
        android:entryValues="@array/pref_movieSort_values"
        android:key="@string/pref_movieSort_key"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null"
        android:title="@string/pref_movieSort_label" />

</PreferenceScreen>
