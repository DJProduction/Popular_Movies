<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.johnsond.popularmovies.MovieReviewsActivityFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/movie_review_imageView"
            android:layout_width="140dp"
            android:layout_height="190dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="Movie Cover Image"
            android:elevation="10dp"
            android:scaleType="fitXY" />

        <!--Format for the title of the selected movie, shown in the detail activity-->
        <TextView
            android:id="@+id/movie_review_origional_title_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:background="@color/button_material_dark"
            android:elevation="10dp"
            android:gravity="bottom"
            android:text="@string/text_placeholder"
            android:textColor="@color/abc_primary_text_material_dark"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <ListView
        android:id="@+id/movie_reviews_listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"></ListView>

</LinearLayout>
